<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarbershopClient.Views.HomePage"
             Title="Barbershop">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Добро пожаловать в Barbershop!"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button Text="Записаться"
                    Clicked="OnBookingClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="10"/>

            <Button Text="Добавить Барбера"
        Clicked="OnAddBarberClicked"
        BackgroundColor="#512BD4"
        TextColor="White"
        CornerRadius="10"/>
            <Button Text="Добавить Расписание"
                    Clicked="OnAddScheduleClicked" 
                    BackgroundColor="#512BD4" 
                    TextColor="White" 
                    CornerRadius="10" />
            <Button Text="Управление Бронированиями" 
                    Clicked="OnManageBookingsClicked" 
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="10" />


            <Button Text="Добавить Услугу"
        Clicked="OnAddServiceClicked"
        BackgroundColor="#512BD4"
        TextColor="White"
        CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
