<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarbershopClient.Views.Admin.AddBarberPage"
             Title="Добавить Барбера">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Добавить Барбера" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="NameEntry" Placeholder="Имя" />
            <Entry x:Name="BioEntry" Placeholder="Биография" />
            <Button Text="Выбрать Фото" Clicked="OnPickPhotoClicked" />
            <Button Text="Добавить Барбера" Clicked="OnAddBarberClicked" BackgroundColor="#512BD4" TextColor="White" CornerRadius="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
