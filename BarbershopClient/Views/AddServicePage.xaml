<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarbershopClient.Views.Admin.AddServicePage"
             Title="Добавить Услугу">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Добавить Услугу" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="ServiceNameEntry" Placeholder="Название услуги" />
            <Entry x:Name="PriceEntry" Placeholder="Цена" Keyboard="Numeric" />
            <Entry x:Name="DurationEntry" Placeholder="Продолжительность (в минутах)" Keyboard="Numeric" />
            <Button Text="Добавить Услугу" Clicked="OnAddServiceClicked" BackgroundColor="#512BD4" TextColor="White" CornerRadius="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
